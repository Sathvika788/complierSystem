{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Development Server",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.api.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": true,
            "console": "integratedTerminal",
            "env": {
                "REDIS_HOST": "localhost",
                "REDIS_PORT": "6379"
            }
        },
        {
            "name": "Worker Process",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/workers/queue_manager.py",
            "console": "integratedTerminal",
            "env": {
                "REDIS_HOST": "localhost",
                "REDIS_PORT": "6379"
            }
        },
        {
            "name": "Run Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests",
                "-v",
                "-s"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "compounds": [
        {
            "name": "Start Full System",
            "configurations": ["FastAPI Development Server", "Worker Process"]
        }
    ]
}