{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Redis",
            "type": "shell",
            "command": "redis-server",
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*Ready to accept connections",
                        "endsPattern": ".*"
                    }
                }
            ]
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "pip install -r requirements.txt",
            "group": "build"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "python -m pytest tests/ -v",
            "group": "test"
        },
        {
            "label": "Docker Compose Up",
            "type": "shell",
            "command": "docker-compose -f docker/docker-compose.yml up -d",
            "group": "build"
        },
        {
            "label": "Docker Compose Down",
            "type": "shell",
            "command": "docker-compose -f docker/docker-compose.yml down",
            "group": "build"
        }
    ]
}